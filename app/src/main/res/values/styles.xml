<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/default_main_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/default_main_color</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.ListItem" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/black05</item>
        <item name="android:shadowRadius">0.3</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TextAppearance.ListItem.Title" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ListItem.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Tabs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextAppearance.Toolbar">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Toolbar.Middle">
    </style>
    <style name="TextAppearance.Toolbar.Side">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
