<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <com.ldx.microtravelnotes.ui.widget.CircleImageView
        android:id="@+id/fragment_detail_item_user_avatar"
        android:background="@drawable/fragment_detail_selector"
        android:layout_width="@dimen/detail_user_avatar_length"
        android:layout_height="@dimen/detail_user_avatar_length" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/fragment_detail_item_user_avatar"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fragment_detail_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingBottom="8dp"
            android:text="天之南"/>
        <TextView
            android:id="@+id/fragment_detail_item_user_contents"
            android:layout_below="@id/fragment_detail_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#000"
            android:maxLines="1"
            android:maxEms="20"
            android:ellipsize="end"
            android:text="世界那么大，我想去看看"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/fragment_detail_item_comments_time"
        android:text="9小时前"
        android:textColor="@color/default_grey"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>