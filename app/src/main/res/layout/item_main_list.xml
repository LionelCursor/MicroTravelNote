<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/main_list_item_height"
    android:background="@null"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="0dp"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/main_list_item_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/main_list_item_title"
            style="@style/TextAppearance.ListItem.Title" />

        <TextView
            android:id="@+id/main_list_item_subtitle"
            style="@style/TextAppearance.ListItem.Subtitle"
            android:layout_below="@id/main_list_item_title" />

        <com.ldx.microtravelnotes.ui.widget.LikedHeartView
            android:id="@+id/main_list_item_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/img" />

        <ImageView
            android:id="@+id/main_list_item_user_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/img" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
